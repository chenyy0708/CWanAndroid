<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        app:banner_aspectRatio="1.8"
        app:banner_indicatorGravity="right"
        app:banner_isNumberIndicator="true"
        app:banner_numberIndicatorTextSize="@dimen/text_14"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayInterval="3000"
        app:banner_pointTopBottomMargin="15dp"
        app:banner_tipTextSize="@dimen/text_14"
        app:banner_transitionEffect="depth" />
</LinearLayout>